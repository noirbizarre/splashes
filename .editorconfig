# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,py}]
charset = utf-8
indent_style = space

[*.py]
indent_size = 4
max_line_length = 120

[*.yml]
indent_size = 2
